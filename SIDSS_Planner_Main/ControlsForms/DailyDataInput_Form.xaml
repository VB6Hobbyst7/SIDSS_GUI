<Window x:Class="DailyDataInput_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIDSS_Planner_GUI"
        mc:Ignorable="d"
        Title="DailyDataInput_Form" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Button x:Name="btnLoadCSV" FontWeight="Bold" Content="Load CSV file..." Height="25" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>

                </Grid>
                <Grid Grid.Column="2">
                    <Button x:Name="btnSaveDailyData" FontWeight="Bold" Content="Save Data" Width="100"  Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="5"/>
                </Grid>
            </Grid>
            <Grid>
                <RichTextBox x:Name="rtbxDailyData" MinHeight="350" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto">
                    <FlowDocument>
                        <Paragraph xml:space="preserve" ><Run Text="Clear entire text and copy-paste daily weather data (tab-separated values) from the opened spreadsheet to this textbox."/>

