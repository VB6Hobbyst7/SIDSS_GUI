                                <TextBox x:Name="tbx_elev"  Text="1427.38" Margin="5,5,5,0" Padding="5"/>
                            </Grid>
                            <Grid Grid.Column="3" Margin="0,0,5,0" >
                                <Label Content=" Weather station elevation (m)" HorizontalAlignment="Left" Margin="5,5,5,0" Padding="5"/>
                            </Grid>
                        </Grid>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*"/>
                                <ColumnDefinition Width="1.75*"/>
                                <ColumnDefinition Width="0.75*"/>
                                <ColumnDefinition Width="2*"/>
