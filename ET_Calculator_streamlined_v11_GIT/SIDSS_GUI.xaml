                                <Label Content="Air temperature measurement height (m)" Margin="5,7" Padding="5"/>
                            </Grid>
                        </Grid>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.75*"/>
                                <ColumnDefinition Width="1.75*"/>
                                <ColumnDefinition Width="0.75*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" VerticalAlignment="Center" >
                                <ComboBox x:Name="cbx_lon_center" Margin="5,0,5,0" Padding="5">
                                    <ComboBoxItem Content="75"/>
                                    <ComboBoxItem Content="90"/>
                                    <ComboBoxItem Content="105"/>
                                    <ComboBoxItem Content="120"/>
                                </ComboBox>

                            </Grid>
                            <Grid Grid.Column="1" >
                                <Label Content="Longitude @ center of local time." Margin="5,0,5,0" Padding="5"/>

